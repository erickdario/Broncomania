<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        
    </style>
    
    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
    	<item name="android:fontFamily">sans-serif-thin</item>
	</style>

	<style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
    	<item name="android:fontFamily">sans-serif-thin</item>
	</style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
    	<item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>
    
    <color name="blue_buttons"> #6591c6 </color>
    
    <color name="blue_buttons_pressed"> #1065c2 </color>
    
    <color name="blue_letters"> #1065c2 </color>
    
    <color name="blue_home"> #5597ce </color>
    
    <color name="white_buttons"> #ffffff </color>
    
    <color name="green_background"> #78a23c </color>
    
    <color name="green_button_pressed"> #305319 </color>
    
    <color name="gray_background"> #232323 </color>
    
    <color name="dark_gray_event"> #636363 </color>
    
    <color name="light_gray_event"> #e5e5e5 </color>
    
    <color name="dark_purple_event"> #483764 </color>
    
    <color name="light_purple_event"> #e0dae7 </color>
    
    <color name="purple_candidate"> #8d22e0 </color>
    
    <color name="white_20_alpha"> #33ffffff </color>
    
    <color name="white_50_alpha"> #7cffffff </color>
    

</resources>
